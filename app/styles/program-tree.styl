.arrow
  display inline-block
  position relative
  width 10px
  height 14px
  vertical-align middle

.arrow:before,
.arrow:after
  content ''
  display block
  width 10px
  background-color #2980B9
  height 1px
  position absolute

.arrow:before
  transform rotate(45deg)
  top 3px

.arrow:after
  transform rotate(-45deg)
  bottom 3px

.arrow.arrow-down
  transform translateY(-50%) rotate(90deg) !important
  margin-top 1px
  right 15px

.arrow.arrow-down:after,
.arrow.arrow-down:before
  background-color #fff

.angular-ui-tree-nodes .angular-ui-tree-nodes
  padding 0


/**
 * Program tree
 */
.program-tree ul
  list-style none
  padding 0
  margin 0

.exercise-list,
.set-list
  display none

.day-item
  background-color white
  border-bottom 1px solid #efefef

.program-item
  display flex
  flex-wrap wrap
  padding 0
  align-items center

.program-item
  .program-item-actions
    display flex
    align-items center
    order 2
    .program-item-action
      display block
      position static
      font-size 16px
      line-height 1
      &.arrow
        margin 10px 0 10px 5px
      &:last-child
        padding-right 0
        margin-right 0
    .edit-btn
      transform none

  .program-item-value
    order 1
    flex 1

.program-item > ul
  flex 1 100%

.program-item .program-item-text
  flex 1
  position relative
  display flex
  margin 0
  font-weight 100
  font-size 16px
  transition none

.exercise-item > .program-item-text,
.day-item > .program-item-text
  height 40px
.set-item .program-item-text
  height 34px

.program-item .ui-tree-handle
  top 0
  padding 10px
  // margin-right 10px
  color black
  font-size 20px

.program-item.day-item > .program-item-text,
.program-item.exercise-item > .program-item-text
  padding 10px

.day-expanded.program-item.day-item > .program-item-text,
.exercise-expanded.program-item.exercise-item > .program-item-text
  position relative
  color #fff
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.4)

.day-expanded.program-item.day-item > .program-item-text
  z-index 10

.exercise-expanded.program-item.exercise-item > .program-item-text
  z-index 9

.program-item.exercise-item > .program-item-text
  background-color $turquoise
  color #fff

.day-expanded.program-item.day-item > .program-item-text
  background-color $green-sea

.expand-btn:hover
  color $wet-asphalt

.day-item:not(.day-expanded) > .expand-btn:hover
  background-color #efefef

.expand-btn .arrow
  transform rotate(0)

.program-tree .day-expanded .arrow:after,
.program-tree .day-expanded .arrow:before,
.program-tree .exercise-expanded .arrow:after,
.program-tree .exercise-expanded .arrow:before
  background-color #fff

.day-expanded > .expand-btn > .program-item-actions > .arrow,
.exercise-expanded > .expand-btn > .program-item-actions > .arrow
  margin-right 2px
  transform rotate(90deg)

.program-tree .day-expanded ul.exercise-list
  display block
  margin-left 10px

.program-tree .day-expanded > ul.exercise-list > li
  border-bottom 1px solid #efefef

.program-tree .day-expanded > ul.exercise-list > li:last-child
  border-bottom 0

.program-tree .exercise-expanded > ul.set-list
  margin-left 10px
  display block

.program-tree .exercise-expanded > ul.set-list > li
  border-bottom 1px solid #BDC3C7

.program-tree .exercise-expanded > ul.set-list > li:last-child
  border-bottom 0

.program-tree .exercise-expanded > .expand-btn
  position relative
  z-index 8
  box-shadow 0px 1px 1px rgba(0, 0, 0, 0.39)

.program-option
  font-weight 100
  position relative
  margin 10px 0 10px 10px

  .edit-btn
    right 5px

.edit-box
  position relative
  flex 1
  .edit-btn
    right 5px
  input
    display block
    width 100%
    border 0
    margin 0 auto
    outline none
    border-top 1px solid #2C3E50
    border-bottom 1px solid #2C3E50
    font-size 16px
    font-weight 100
    background-color #ECF0F1
    padding 9px

.edit-btn
  cursor pointer
  position absolute
  font-size 14px
  padding 10px 5px
  color #34495E
  top 50%
  transform translateY(-50%)

.remove-btn
  padding 10px 5px
  color $pomegranate

.exercise-item.exercise-expanded > .program-item-text
  box-shadow: inherit 0 0px 2px rgba(0,0,0,0.4);

.set-item
  position relative
  border-bottom: 1px solid #fff !important;
  &:last-child
    border-bottom 0

  .ui-tree-handle
    padding 7px 10px

  .set-nr
    padding 7px 8px
    font-size 15px
    color #fff
    background-color $wet-asphalt

  .set-text
    padding 7px 10px
    background-color #ECF0F1
    color $wet-asphalt
    small
      line-height 1

  .edit-btn
    right 5px

  .edit-box input
    padding 6px 10px
    font-size 15px

#global-edit,
#global-cancel
  text-align center
  font-size 16px
  font-weight 100
  padding 5px 0 5px 0px
  width 70px
  color #fff
  float right
  cursor pointer

#global-edit
  background-color $green-sea
#global-cancel
  background-color $silver;

#program-name-box
  font-size 40px

#program-name-box h3
  margin 0
  padding 10px
  position relative
  font-size inherit
  font-weight 100

#program-name-box h3 .edit-btn
  font-size 20px
  right 5px

#program-name-box .edit-box input
  font-size inherit
  padding 9px 10px
  line-height 1

#program-name-box .edit-box .edit-btn
  font-size 20px

#program-routine h3
  margin-top 11px
  font-weight 100
  padding-left 10px
  position relative

#reorder-btn
  display inline-block
  font-size 16px
  position absolute
  right 15px
  bottom 0
  cursor: pointer
  &:hover
    color $green-sea
