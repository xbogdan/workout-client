/* Search overlay */
.noscroll {
  overflow: hidden;
}

.search-overlay {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99999;
  background-color: rgba(0,0,0,0.95);
}

.search-input-box {
  position: relative;
}

.search-input-box a {
  position: absolute;
  right: 20px;
  margin-top: 1px;
  color: #BDC3C7;
  z-index: 11;
  font-size: 12px;
  top: 50%;
  transform: translateY(-50%);
}

.search-input {
  border: 0;
  /*border-bottom: 2px dotted #34495E;*/
  box-shadow: 0px 0px 6px rgba(0,0,0,0.6);
  position: relative;
  z-index: 10;
  font-weight: 100;
  color: #34495E;
  display: block;
  width: 100%;
  padding: 10px;
  outline: none;
}

.search-overlay-cancel {
  background-color: #C0392B;
  color: #fff;
}

.search-overlay-accept,
.search-overlay-cancel {
  width: 50%;
}

.search-overlay-btns {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.search-overlay-btns button {
  border-radius: 0;
}

.so-search-results-box {
  position: absolute;
  z-index: 9;
  top: 50px;
  width: 100%;
}

.so-create-new {
  display: none;
  width: 100%;
}

.so-create-new .so-create-new-text {
  background-color: #1ABC9C;
  color: white;
  line-height 1;
  padding: 0px 10px;
  margin-right 10px
  line-height 51px;
  display: inline-block;
}

.search-results {
  list-style: none;
  padding: 0;
  margin: 0;
  bottom: 100px;
  width: 100%;
  margin-bottom: 0px;
  overflow-y: scroll;
}

.search-results li,
.so-create-new {
  background-color: #fff;
  color: #2C3E50;
  font-weight: 100;
  border-bottom: 1px solid #ECF0F1;
}

.search-results li {
  padding: 10px;
}

.search-results li:hover,
.so-create-new:hover {
  background-color: #ECF0F1;
  cursor: default;
}

